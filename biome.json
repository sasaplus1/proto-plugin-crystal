{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "none"
    }
  },
  "linter": {
    "rules": {
      "correctness": {
        "noUnreachable": "off"
      }
    }
  },
  "files": {
    "includes": ["./*.cjs", "./package.json", "./*.ts"]
  }
}
